<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" loaded="pageLoaded">     
    <TabView tabsBackgroundColor="#151515" selectedColor="red">
        <TabView.items>
            
            
            <TabViewItem title="SETTINGS">
                <TabViewItem.view>
                    <StackLayout>
                        <Button class="config" text="reset app" tap="{{ btnConfig }}" />
                        <ListView id="listview" items="{{ myItems }}" itemTap="{{ lightListTap }}">
                            <ListView.itemTemplate>
                                <StackLayout orientation="horizontal">
                                <Label text="{{ id + ' ' }}" />
                                <Label text="{{ title }}" />
                                </StackLayout>
                            </ListView.itemTemplate>
                        </ListView>
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            
            
            <TabViewItem title="THEMES">
                <TabViewItem.view>
                    <StackLayout>
                        <ActivityIndicator class="spinner" busy="test" />
                        <Label class="spinner" text="Please Wait" />
                        <Label class="spinner" text="While Connecting To Hue Bridge" />
                        <Label class="bridge" text="Bridge Found! Please Hit The Button" />
                        <Label class="bridge" text="On Your Bridge To Allow Connetion." />
                        
                        <Button class="first" text="[ PlaceHolder ]" />
                        <Button class="IntenseHorror" text="Intense Horror" tap="{{ btnIntenseHorror }}" />
                        <Button class="third" text="[ PlaceHolder ]" /> 
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            
            

            
        </TabView.items>
    </TabView>
</Page>